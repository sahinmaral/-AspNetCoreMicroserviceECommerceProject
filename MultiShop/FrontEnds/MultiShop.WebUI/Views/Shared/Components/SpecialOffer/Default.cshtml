@model List<ResultSpecialOfferDto>

@{
    string getOverflowValueByCountOfList(){
        return @Model.Count == 2 ? "hidden" : "scroll";
    }
}

<div style="height: 430px; overflow-y: @getOverflowValueByCountOfList();">
    @foreach (var specialOffer in Model)
    {
        <div class="product-offer mb-30" style="height: 200px;">
            <img class="img-fluid" src="@specialOffer.ImageUrl" alt="specialOfferImage">
            <div class="offer-text">
                <h6 class="text-white text-uppercase">@specialOffer.Title</h6>
                <h3 class="text-white mb-3">@specialOffer.SubTitle</h3>
                <a href="" class="btn btn-primary">Alışverişe Başlayın</a>
            </div>
        </div>
    }
</div>