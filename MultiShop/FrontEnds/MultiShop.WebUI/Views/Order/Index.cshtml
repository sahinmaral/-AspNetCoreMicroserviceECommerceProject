@{
    ViewData["Title"] = "Faturalandırma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Order" asp-action="Index" method="post">
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Faturalandirma Adresi</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Ad</label>
                            <input class="form-control" type="text" name="name">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Soyad</label>
                            <input class="form-control" type="text" name="surname">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-posta adresi</label>
                            <input class="form-control" type="text" name="email">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Telefon numarası</label>
                            <input class="form-control" type="text" name="phoneNumber">
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Adres satır 1</label>
                            <input class="form-control" type="text" name="detail1">
                        </div>
                        <div class="col-md-12 form-group">
                            <label>Adres satır 2</label>
                            <input class="form-control" type="text" name="detail2">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İl</label>
                            <input class="form-control" type="text" name="city">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>İlçe</label>
                            <input class="form-control" type="text" name="district">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                @await Component.InvokeAsync("CheckoutOrderTotal")
                @await Component.InvokeAsync("CheckoutPayment")
                <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Ödeme adımına geç</button>
            </div>
        </div>
    </div>
</form>
