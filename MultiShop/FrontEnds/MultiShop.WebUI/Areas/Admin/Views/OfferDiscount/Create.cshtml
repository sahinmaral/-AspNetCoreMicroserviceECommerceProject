@model CreateOfferDiscountDto

@{
    ViewData["Title"] = "İndirim fırsatı ekleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h3>İndirim fırsatı ekle</h3>
    <p>Yeni indirim fırsatı eklemek için aşağıdaki formda yer alan bütün alanları doldurmanız gerekir.</p>
</section>

<div class="row">
    <div class="col-md-12">
        <div class="chart-box">
            <form asp-action="Create" asp-controller="OfferDiscount" asp-area="Admin" method="post">
                <div class="form-group">
                    <label for="title">İndirim fırsat başlığı</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="form-group">
                    <label for="subTitle">İndirim fırsat alt başlığı</label>
                    <input type="text" class="form-control" id="subTitle" name="subTitle">
                </div>
                <div class="form-group">
                    <label for="imageUrl">Görsel resmi</label>
                    <input type="text" class="form-control" id="imageUrl" name="imageUrl">
                </div>
                <button type="submit" class="btn btn-default">Gönder</button>
            </form>
        </div>
    </div>
</div>
