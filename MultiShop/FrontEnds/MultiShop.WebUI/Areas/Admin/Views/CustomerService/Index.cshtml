@model List<ResultCustomerServiceDto>

@{
    ViewData["Title"] = "Müşteri hizmetleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .text-yellow{
        color: #FFD333;
    }
</style>

<section class="content-header">
    <h1>Müşteri hizmetleri işlemleri</h1>
</section>

<div class="chart-box">
    <section class="content-header">
        <h3>Müşteri hizmetleri listesi</h3>
        <p>Müşteri hizmetleri ile ilgili işlemlerinizi aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
    </section>

    @if (Model.Count > 0)
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customerService in Model)
                {
                    <tr>
                        <td scope="col">
                            <i class="fa fa-2x text-yellow @customerService.Icon" style="padding: 12px 0px;" />
                        </td>
                        <td>
                            <p style="padding: 12px 0px;">@customerService.Name</p>
                        </td>
                        <td>
                            <ul class="sidebar-menu" data-widget="tree">
                                <li class="treeview">
                                    <a href="#"> <span>Seçenekler</span> <span class="pull-right-container"> <i class="fa fa-angle-left pull-right"></i> </span> </a>
                                    <ul class="treeview-menu">
                                        <li>
                                            <form asp-action="Delete" asp-controller="CustomerService" asp-area="Admin" method="post">
                                                <input type="hidden" name="id" value="@customerService.Id" />
                                                <button type="submit" class="btn btn-link" style="padding:8px 10px; text-decoration:none; color:#787878"><i class="fa fa-angle-right" style="width:10px; margin-right:6px;"></i>Sil</button>
                                            </form>
                                        </li>
                                        <li>
                                            <a href="/admin/customerService/update/@customerService.Id"><i class="fa fa-angle-right"></i>Güncelle</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div role="alert" class="alert alert-info">Herhangi bir müşteri hizmetleri bulunmamaktadır.</div>
    }

    <a href="/admin/customerService/create" class="btn btn-primary">Yeni müşteri hizmeti ekle</a>
</div>

